<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/reserveInfo"
        android:layout_width="383dp"
        android:layout_height="253dp"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.236">


        <Button
            android:id="@+id/openMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="188dp"
            android:text="Open Map" />

        <TextView
            android:id="@+id/binus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="197dp"
            android:layout_toStartOf="@+id/parkingInfo"
            android:text="BINUS"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/parkingInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="87dp"
            android:layout_marginBottom="198dp"
            android:layout_toStartOf="@+id/openMap"
            android:text="Alam Sutera"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/scanQRCode"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="186dp"
            android:layout_marginBottom="21dp"
            android:text="Scan QR Code" />

        <TextView
            android:id="@+id/startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/scanQRCode"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="295dp"
            android:layout_marginBottom="81dp"
            android:drawableLeft="@drawable/ic_history_24"
            android:text="15:00" />

        <TextView
            android:id="@+id/endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/scanQRCode"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="153dp"
            android:layout_marginBottom="80dp"
            android:drawableLeft="@drawable/ic_history_24"
            android:text="17:00" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/scanQRCode"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="249dp"
            android:layout_marginBottom="83dp"
            android:text="to" />

        <TextView
            android:id="@+id/price"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/scanQRCode"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="91dp"
            android:layout_marginBottom="20dp"
            android:text="Rp. 30.000,00"
            android:textSize="27dp" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>