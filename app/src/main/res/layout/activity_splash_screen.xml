<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="start"
    tools:context=".SplashScreen"
    android:background="@drawable/mobilkeren">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/textView2"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/white"
        android:textSize="55dp"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:text="Welcome to BinusPark" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/button1"
        android:layout_marginHorizontal="14dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:text="Find the best reserved parking space in BINUS University" />

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center"
        android:backgroundTint= "#F7631E"
        android:padding="20dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="Click to Login / Signup" />

</RelativeLayout>